class Solution {

    void printTriangle(int n) {
        // code here
        
        for(int i=1; i<=n; i++){
            for(int j=1; j<=i; j++){
                System.out.print(j+" ");
                
            }
            for(int s= (n-i)*2; s>=1; s--){
                    System.out.print("  ");
            }
            for(int j=i; j>=1; j--){
                System.out.print(j+" ");
                
            }
            System.out.println();
        }
    }
}
