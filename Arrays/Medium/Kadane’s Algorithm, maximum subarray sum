class Solution {
    public int maxSubArray(int[] nums) {
        int sum=0;
        int max=nums[0];
        int n=nums.length;
        
        if(n==1)
            return max;
        
        for(int i=0;i<n;i++){
            sum+=nums[i];
            max=Math.max(max,sum);
            if(sum<0)
                sum=0;
        }
        
        return max;
    }
}




